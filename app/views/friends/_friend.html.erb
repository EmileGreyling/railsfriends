<tr id="<%= dom_id friend %>">
  <td>
    <%= friend.first_name %> 
    <%= friend.last_name %>
  </td>
  <td>
    <%= friend.email %>
  </td>
  <td>
    <%= friend.phone %>
  </td>
  <td>
    <%= friend.twitter %>
  </td>
  <td>
    <%= link_to "🔍", friend, class: "btn btn-primary btn-sm" %>
  </td>
  <td>
    <%= link_to "✏️", edit_friend_path(friend), class: "btn btn-success btn-sm" %>
  </td>
  <td>
    <%= button_to "X", friend, data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger btn-sm" %>
  </td>
</tr>
