<div class="mb-4">
  <h1 class="display-4">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>
    
  <p class="lead">
    <strong>Email:</strong>
    <%= @friend.email %>
  </p>
  <p class="lead">
    <strong>Phone:</strong>
    <%= @friend.phone %>
  </p>
  <p class="lead">
    <strong>Twitter:</strong>
    <%= @friend.twitter %>
  </p>
</div>

<div>
  <%= link_to "Edit this friend", edit_friend_path(@friend), class: "btn btn-secondary" %>
  <%= link_to "Back to friends", friends_path, class: "btn btn-secondary" %>

  <%= button_to "Destroy this friend", @friend, method: :delete, class: "btn btn-danger mt-3" %>
</div>
